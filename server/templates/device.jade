extends layout

block content
    div(style='margin-bottom: 10px')
        img.user-pic(src=device.userinfo.pic)
        h2.name= device.userinfo.name
        .blinking-cursor
        .clear
    .row.l_left-row
        .col-md-4

            p= 'Model: ' + device.userinfo.model
            p= 'Android Version: ' + device.userinfo.androidVersion
            img(src='https://maps.googleapis.com/maps/api/staticmap?zoom=17&size=350x350&style=feature:road.local|element:geometry|color:0x00ff00&style=feature:all|element:geometry.fill|color:0x000000&style=feature:all|element:labels|visibility:off&center='+device.location.lat+','+device.location.lng+'&markers=color:white|'+device.location.lat+','+device.location.lng)

        .col-md-3
            h3(style='text-decoration: underline;') Contacts
            #contacts
                each contact in device.contacts
                    .contact
                        span.name= contact.name
                        span.phone= contact.phone
                        br

        .col-md-5
            h3(style='text-decoration: underline;') Notifications
            #notifications
                each notification in device.notifications
                    .notification(data-id=notification.id)
                        span.ticker-text= notification.tickerText
                        span.app-name= 'From ' + notification.appName
                        br

    script(src='/assets/js/device.js')